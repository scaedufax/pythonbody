#include <math.h>
#include <stdio.h>

double grav_pot(double *m, double *x1, double *x2, double *x3, double *EPOT, int n) {
	for (int i = 0; i < n; i++) {

		for (int j = i+1; j < n; j++) {

			double dist = sqrt((x1[i] - x1[j])*(x1[i] - x1[j]) + (x2[i] - x2[j])*(x2[i] - x2[j]) + (x3[i] - x3[j])*(x3[i] - x3[j]));
			double epot_ij = -m[i]*m[j]/dist;
			EPOT[i] += epot_ij;
			EPOT[j] += epot_ij;
		}
	}
}
